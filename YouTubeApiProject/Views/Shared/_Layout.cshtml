<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YouTubeApiProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouTubeApiProject.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css" />

</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Flexbox ensures full height -->

    <header>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="color: red;">Youtube</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="YouTube" asp-action="Index">Search Music</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container flex-grow-1 pb-3">
        <!-- Ensure it expands properly -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted text-center p-3 mt-auto">
        <div class="container">
            &copy; 2025 - YouTubeApiProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Ensure full viewport height */
    }

    main {
        flex-grow: 1; /* Pushes footer to the bottom */
    }

    .pagination-container {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 50px; /* Adds space between pagination and footer */
    }

    footer {
        position: relative; /* Ensure it stays below content */
        z-index: 1; /* Keep it behind interactive elements */
        padding: 20px 0; /* Give some spacing inside */
    }

</style>